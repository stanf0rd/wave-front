.app {
  --card-margin: 5px;

  height: calc((100% - 8 * var(--card-margin)) / 4);
  /* height: 15vh; */
  width: calc((100% - 3 * var(--card-margin)) / 2);
  max-width: 28vh;

  margin: var(--card-margin);

  display: flex;
  justify-content: center;
  align-items: center;

  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 5px;
  color: rgba(255, 255, 255, 0.1);
  font-size: calc(100vh / 12);
}
