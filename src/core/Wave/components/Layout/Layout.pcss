:global(:root) {
  --frame-width: 40px;
}

.layout {
  height: 100vh;
  width: 100vw;

  display: flex;
  flex-direction: column;
  filter: none;
  will-change: filter;
  transition: filter 0.4s ease-out;

  &__item {
    box-sizing: border-box;
    padding: 0 var(--frame-width); /* TODO: media queries */

    display: flex;
    width: 100%;
  }

  &__header {}

  &__content {
    flex: 1;
  }

  &__menu {}

  &_blurred {
    filter: blur(15px);
  }
}
