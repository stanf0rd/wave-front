.tile {
  display: block;
  margin: 10px;

  color: #F5F5F5;
  text-decoration: none;

  &:first-child {
    margin-left: 0px;
    padding-left: var(--frame-width);
  }

  &:last-child {
    padding-right: var(--frame-width);
  }

  &__card {
    height: 200px;
    width: 400px;

    display: flex; /* REMOVE */

    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 3px;
  }

  &__caption {
    margin: 4px;
    font: 16px Gilroy-Light;
  }
}
