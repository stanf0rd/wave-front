.loader {
  position: absolute;
  z-index: 10;

  height: 100vh;
  width: 100vw;

  display: flex;
  justify-content: center;
  align-items: center;

  background-color: black;
  transition: opacity 0.3s ease-out;
  opacity: 1;

  &_hidden {
    opacity: 0;
  }


  &__text {
    stroke-width: 0.8;
    stroke-linecap: round;
    stroke-linejoin: round;
    enable-background: new;
    font-family: Gilroy-ExtraBold;
    font-size: 56px;
  }
}
