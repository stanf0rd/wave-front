.layout {
  height: 100vh;
  width: 100vw;

  display: flex;
  flex-direction: column;


  &__item {
    display: flex;
    width: 100%;
  }

  &__header {
    height: 100px;
    background-color: blue;
  }

  &__content {
    flex: 1;
  }

  &__menu {
    height: 100px;
    background-color: red;
  }
}
