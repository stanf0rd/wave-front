.layout {
  height: 100vh;
  width: 100vw;

  display: flex;
  flex-direction: column;


  &__item {
    box-sizing: border-box;
    padding: 0 40px; /* TODO: media queries */

    display: flex;
    width: 100%;
  }

  &__header {
    background-color: blue;
  }

  &__content {
    flex: 1;
  }

  &__menu {
    background-color: red;
  }
}
