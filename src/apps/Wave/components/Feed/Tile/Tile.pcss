.tile {
  display: block;
  margin: 10px;

  color: black;
  text-decoration: none;

  &:first-child {
    margin-left: 0;
  }

  &__card {
    height: 200px;
    width: 400px;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: gray;
  }

  &__icon {
    font-size: 48px;
  }

  &__caption {
    margin: 4px;
  }
}
