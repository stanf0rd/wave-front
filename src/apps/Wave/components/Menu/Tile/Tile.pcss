.tile {
  display: block;
  margin: 10px;

  color: white;
  text-decoration: none;

  &:first-child {
    margin-left: 0;
  }

  &__card {
    height: 100px;
    width: 200px;

    display: flex;
    justify-content: center;
    align-items: center;

    background-color: green;
  }

  &__icon {
    font-size: 48px;
  }

  &__caption {
    margin: 4px;
    font: 16px Roboto;
  }
}
